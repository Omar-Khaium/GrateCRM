<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.divyanshu.draw.widget.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white" />

    <com.google.android.material.chip.Chip
        android:id="@+id/close"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:chipIcon="@drawable/ic_close"
        app:chipIconVisible="true"
        app:chipIconTint="@android:color/white"
        app:chipStartPadding="8dp"
        android:fontFamily="@font/font_bold"
        android:text="Close"
        app:chipCornerRadius="21dp"
        app:chipMinHeight="42dp"
        android:layout_margin="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:textEndPadding="8dp"
        android:textColor="@android:color/white"
        app:chipBackgroundColor="@android:color/holo_red_light" />

    <com.google.android.material.chip.Chip
        android:id="@+id/reset"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        app:chipIcon="@drawable/ic_refresh"
        app:chipIconVisible="true"
        app:chipIconTint="@android:color/white"
        app:chipStartPadding="8dp"
        android:fontFamily="@font/font_bold"
        android:text="Reset"
        app:chipCornerRadius="21dp"
        app:chipMinHeight="42dp"
        android:layout_margin="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:textEndPadding="8dp"
        android:textColor="@android:color/white"
        app:chipBackgroundColor="@android:color/holo_orange_dark" />
</RelativeLayout>